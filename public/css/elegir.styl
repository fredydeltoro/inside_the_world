@import 'nib/vendor'
@import 'nib/gradients'


vendor-prefixes ?= moz webkit o ms official

blanco = #e9e9e9

@font-face
    font-family 'iconitos'
    src url('../fonts/icomoon.eot?hqg4h2')
    src url('../fonts/icomoon.eot?#iefixhqg4h2') format('embedded-opentype'),url('/fonts/icomoon.woff?hqg4h2') format('woff'),url('../fonts/icomoon.ttf?hqg4h2') format('truetype'),url('../fonts/icomoon.svg?hqg4h2#icomoon') format('svg')
    font-weight normal
    font-style normal


    
.tabla
    position absolute
    left 38%
    top 10%
           
    p
        color white
        font-size 35px
        font-weight 800
        text-align center 
                
            
    table
            
        background white
        border-collapse separate
        border-color gray
        border-radius 10px
        border-spacing 2px
        font-size 18px
        font-align left
        padding 15px
                
        tbody
            display table-row-group
            vertical-align middle
            border-color inherit
                    
            tr  
                td 
                    position relative
                    width 200px
                    padding 5px
                    
                    a
                        display inline-block
                            
                        img
                            float left
                            width 32px
                            
                        p
                            color black
                            font-size 20px
                            float right
                            padding 0
                            position absolute
                            left 40%
                            top -25%
                        
                        .flechita
                            position absolute
                            left 90%
                            top -25%
                            &:after
                                color black
                                font-family "iconitos"
                                font-size 22px
                                content "\e600"
                                vertical-align bottom