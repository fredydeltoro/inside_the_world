@import 'nib/vendor'
@import 'nib/gradients'


vendor-prefixes ?= moz webkit o ms official

blanco = #e9e9e9


    
.tabla
    position absolute
    left 37%
    top 20%
           
    p
        color white
        font-size 35px
        font-weight 800
        text-align center 
                
            
    table
            
        background white
        border-collapse separate
        border-color gray
        border-radius 10px
        border-spacing 2px
        font-size 18px
        font-align left
        padding 15px
                
        tbody
            display table-row-group
            vertical-align middle
            border-color inherit
                    
            tr
                td 
                    border-bottom 1px solid #eee
                    display table-cell
                    padding 3px 15px