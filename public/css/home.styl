@import 'nib/vendor'
@import 'nib/gradients'


vendor-prefixes ?= moz webkit o ms official

blanco = #e9e9e9


.world
        position absolute
        left 15%
        top 30%
        img
            width 40%
    .contenido
        background #35618C
        border-radius 25px
        opacity 0.95
        padding 1em
        position absolute
        top -70px
        width 400px
                    

        &:before
            border-bottom 20px solid transparent
            border-left 20px solid #35618C
            content""
            position absolute
            top 80px
            left 150px

        h2
            color white
            font-size 25px
            margin 0
            padding 0
            text-align center

        p
            color white
            font-size 18px
            margin 0
            padding 0
            text-align center

    .pregunta
        .nave
            height 160px
            position absolute
            top 10%
            right 30%
            transform rotate(270deg)
            width 120px
        p
            color white
            font-size 35px
            font-weight bold
            text-align center 
            position absolute
            right 23%
            top 35%
            width 25%

        .go
            background #82C0FF
            border 1px solid transparent
            border-radius 100px
            font-weight bold
            font-size 30px
            cursor pointer
            color white
            position absolute
            padding 10px 90px 10px 90px
            text-align center
            text-decoration none
            right 26%
            top 60%