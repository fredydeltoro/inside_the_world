section
	
	div
		background #35618C
		border-radius 25px
		opacity .90
		position absolute
		width 500px
		height 300px
		top 20%
		left 32%
		text-align center
		
		p 
			font-size 18px
			color white
			margin 10px 3px 0 3px
		
		input 
			border 2px solid #e9e9e9
			border-radius 50px
			box-shadow   0px 2px 5px #82C0FF
			color #777
			font-size 18px
			line-height 24px
			margin 30px 0 0 90px 
			padding 5px 10px
			text-align center
			display block
	
		a 
			background #82C0FF
			border 1px solid transparent
			border-radius 100px
			font-weight bold
			font-size 30px
			cursor pointer
			color white
			padding 3px 50px 3px 50px
			text-align center
			text-decoration none
			position absolute
			top 72%
			left 34%