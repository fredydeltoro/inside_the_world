azul = #094075
azul_inter = #0c447a
azul_low = #0c5ea6
blanco = #e9e9e9

body
    background url('../imagenes/star.svg'), linear-gradient(top, azul_inter, azul_low)
    font-family 'yanone'

header
    padding 0
    .titular
        margin -19px 0 0 40%
        .titulo
            color white
            font-family 'yanone'
            font-size 2.5em



header, footer 
    background-color azul
    height 70px
    opacity 0.9
    text-align center
    overflow hidden
    

section
    box-sizing border-box
    margin 1.5 auto
    height 500px
    width 100%
    max-width 1920px
    min-width 900px
    position relative
    
footer
    color white
    font-family 'yanone'
    color rgba(white,0.5)
    padding 1em 0
    text-align center
    
    h3
        font-size 18px
        font-weight normal
        
        strong
            display block
            
        .mejor 
            &:before
            &:after
                content "-"

